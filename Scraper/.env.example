# ============================================
# DATABASE
# ============================================
DATABASE_PATH=hp_pulse.db

# ============================================
# SCRAPING INTERVALS (in hours)
# ============================================
TENDER_INTERVAL=1
NEWS_INTERVAL=6
DIRECTORY_INTERVAL=24

# ============================================
# RATE LIMITING
# ============================================
REQUESTS_PER_SECOND=1
REQUEST_TIMEOUT=15

# ============================================
# USER AGENT
# ============================================
USER_AGENT="HP-Pulse-Research-Bot/1.0 (HPCL Direct Sales Research; compliance@hpcl.co.in)"

# ============================================
# API KEYS
# ============================================
# Get a free key from https://newsapi.org/
NEWSAPI_KEY=your_newsapi_key_here

# ============================================
# SECURITY (JWT)
# ============================================
# Generate a secure key: openssl rand -hex 32
JWT_SECRET_KEY=change_this_to_a_secure_random_string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================
# CORS (Frontend Integration)
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
