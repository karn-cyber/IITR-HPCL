[Unit]
Description=HPCL Lead Intelligence - Scraper Service
After=network.target

[Service]
Type=simple
User=%USER%
WorkingDirectory=%INSTALL_DIR%
Environment="PATH=%INSTALL_DIR%/venv/bin"
ExecStart=%INSTALL_DIR%/venv/bin/python3 scraper.py
Restart=always
RestartSec=10
StandardOutput=append:/var/log/hpcl-scraper/scraper.log
StandardError=append:/var/log/hpcl-scraper/scraper.error.log

# Security
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
