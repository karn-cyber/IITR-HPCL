[Unit]
Description=HPCL Lead Intelligence - API Server
After=network.target

[Service]
Type=simple
User=%USER%
WorkingDirectory=%INSTALL_DIR%
Environment="PATH=%INSTALL_DIR%/venv/bin"
ExecStart=%INSTALL_DIR%/venv/bin/uvicorn backend.app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5
StandardOutput=append:/var/log/hpcl-api/api.log
StandardError=append:/var/log/hpcl-api/api.error.log

# Security
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
